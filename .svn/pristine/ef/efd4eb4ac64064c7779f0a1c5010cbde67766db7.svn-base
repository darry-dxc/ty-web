          :wrapper-col="wrapperCol"
        >
          <a-upload
            v-decorator="[
                'roadTransLicenceAttachment',
                {rules: [{ required: true, message: '请上传危险化学品道路运输证附件!' }]}
              ]"
            name="file"
            :multiple="true"
            :headers="headers"
            :defaultFileList="fileList"
            :beforeUpload="beforeUpload"
            @change="handleChange"
          >
            <a-button>
              <a-icon type="upload" /> 点击上传
            </a-button>
          </a-upload>
        </a-form-item>
      </a-form>
    </a-modal>
  </div>
