  <div>
    <a-modal
      title="车头基本信息"
      :visible="visible"
      @ok="handleOk"
      :confirmLoading="confirmLoading"
      @cancel="handleCancel"
      :width="640"
      :okText="okText"
      cancelText="取消"
    >
      <a-form
        :form="form"
