import Vue from 'vue'
import Vuex from 'vuex'

Vue.use(Vuex)

export default new Vuex.Store({
  state: {
    role: '',
    token: '',
    httpError: ''
  },
  mutations: {
    getRole (state, value) {
      state.role = value
    },
    setToken (state, value) {
      state.token = value
    },
    on_http_error (state, payload) {
      state.httpError = payload
    }
  },
  actions: {

  }
})
