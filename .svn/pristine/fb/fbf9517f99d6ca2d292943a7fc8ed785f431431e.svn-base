import request from '../utils/request'
import qs from 'qs'

const commonUrl = 'entrystaff/qualification' // 公共地址
/**
 * 新增驾驶员资质
 * @param { Object } params 参照接口文档
 */
function newDriver (params) {
  return request.post(`${commonUrl}/driver/insert`, qs.stringify(params))
}

/**
 * 新增押运员资质
 * @param { Object } params 参照接口文档
 */
function newEscort (params) {
  return request.post(`${commonUrl}/escort/insert`, qs.stringify(params))
}

/**
 * 新增车头资质
 * @param { Object } params 参照接口文档
 */
function newHeadstock (params) {
  return request.post(`${commonUrl}/headstock/insert`, qs.stringify(params))
}

/**
 * 新增挂车资质
 * @param { Object } params 参照接口文档
 */
function newTrailer (params) {
  return request.post(`${commonUrl}/trailer/insert`, qs.stringify(params))
}

/**
 * 根据id获取驾驶员资质信息
 * @param { String } id 驾驶员id
 */
function getDriverById (id) {
  return request.get(`${commonUrl}/driver/getById`, {
    params: {
      driverId: id
    }
  })
}

/**
 * 根据id获取押运员资质信息
 * @param { String } id 驾驶员id
 */
function getEscortById (id) {
  return request.get(`${commonUrl}/escort/getById`, {
    params: {
      escortId: id
    }
  })
}

/**
 * 根据id获取车头资质信息
 * @param { String } id 驾驶员id
 */
function getHeadstockById (id) {
  return request.get(`${commonUrl}/headstock/getById`, {
    params: {
      headStockId: id
    }
  })
}

/**
 * 根据id获取挂车资质信息
 * @param { String } id 驾驶员id
 */
function getTrailerById (id) {
  return request.get(`${commonUrl}/trailer/getById`, {
    params: {
      trailerId: id
    }
  })
}

/**
 * 分页条件查询驾驶员资质信息
 * @param { Object } params 参照接口文档
 */
function getDriverByCriteria (params) {
  return request.post(`${commonUrl}/driver/getByCriteria`, qs.stringify(params))
}

/**
 * 分页条件查询押运员资质信息
 * @param { Object } params 参照接口文档
 */
function getEscortByCriteria (params) {
  return request.post(`${commonUrl}/escort/getByCriteria`, qs.stringify(params))
}

/**
 * 分页条件查询车头信息
 * @param { Object } params 参照接口文档
 */
function getHeadstockByCriteria (params) {
  return request.post(`${commonUrl}/headstock/getByCriteria`, qs.stringify(params))
}

/**
 * 分页条件查询挂车信息
 * @param { Object } params 参照接口文档
 */
function getTrailerCriteria (params) {
  return request.post(`${commonUrl}/trailer/getByCriteria`, qs.stringify(params))
}

export default {
  newDriver,
  newEscort,
  newHeadstock,
  newTrailer,
  getDriverById,
  getEscortById,
  getHeadstockById,
  getTrailerById,
  getDriverByCriteria,
  getEscortByCriteria,
  getHeadstockByCriteria,
  getTrailerCriteria
}
