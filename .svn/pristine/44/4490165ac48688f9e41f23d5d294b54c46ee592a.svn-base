<template>
  <div>
    <a-table 
      :columns="columns" 
      :dataSource="data" 
      bordered
    >
      <template slot="name" slot-scope="text">
        <a href="javascript:;" @click="onClick(text)">{{text}}</a>
      </template>
      <template slot="title" slot-scope="currentPageData">
        <a-form
          layout="inline"
          :form="form"
        >
          <a-form-item
            label="用户名"
          >
            <a-input></a-input>
          </a-form-item>
          <a-form-item
            label="所属公司"
          >
            <a-input></a-input>
          </a-form-item>
          <a-form-item
            label="注册时间"
          >
            <a-range-picker 
              @change="onChange" 
              :placeholder="placeholder"
              format="YYYY/MM/DD"
            />
          </a-form-item>
          <a-form-item>
            <a-button type="primary" icon="search">查询</a-button>
          </a-form-item>
          <a-form-item>
            <a-button >重置</a-button>
          </a-form-item>
        </a-form>
      </template>
       <span slot="action" slot-scope="text, record">
         <a-button :type="canUse?'danger':'primary'" @click="canUse = !canUse" size="small">{{canUse?'停用':'启用'}}</a-button>
         <a-button size="small" style="marginLeft:18px" @click="visible = true">编辑</a-button>
       </span>
       <template slot="footer" slot-scope="currentPageData">
        <a-button type="primary" @click="handleAdd" style="margin-right: 16px">添加成员</a-button>
        <downloadExcel 
          :data="json_data"
          :fields="json_fields"
          name="公司门卫导入模板.xls"
          style="width:auto; display:inline-block"
        >
          <a-tooltip placement="bottom" >
            <template slot="title">
                <span>导入模板下载</span>
            </template>
              <a-button type="primary" style="margin-right: 8px"><a-icon type="copy" /></a-button>
          </a-tooltip>
        </downloadExcel>
        <a-upload 
          name="file" 
          :multiple="false"
          :action="action"
          :fileList="fileList"
          :headers="headers"
          accept=".xls, .xlsx"
          @change="handleChange"
        >
          <a-button type="primary">
            <a-icon type="file-excel" /> 批量导入
          </a-button>
          <span class="tip">请先下载模板，只能上传excel文件，且不超过10M</span>
        </a-upload>
      </template>
    </a-table>
    <a-modal
      title="权限修改"
      v-model="visible"
      @ok="visible = false"
      centered
      okText="确认"
      cancelText="取消"
    >
      <p>待完善...</p>
    </a-modal>
    <addModal ref="addModal" @newUser="newGuard"/>
  </div>
</template>

<script>
import addModal from '../components/addModal'
const columns = [{
  title: '用户名',
  dataIndex: 'driver',
  scopedSlots: { customRender: 'name'}
}, {
  title: '所属公司',
  dataIndex: 'phone1',
}, {
  title: '注册时间',
  dataIndex: 'createTime',
}, {
  title: '操作',
  key: 'action',
  scopedSlots: { customRender: 'action' },
}];

const data = [{
  key: '1',
  driver: 'Joe',
  escort: 'Lily',
  actionType: '录入',
  actionPs: '',
  createTime: '2019-2-22 12:00:00',
}, {
  key: '2',
  driver: 'John',
  escort: 'Blank',
  actionType: '录入',
  actionPs: '',
  createTime: '2019-2-22 12:00:00',
}, {
  key: '3',
  driver: 'Jack',
  escort: 'Las',
  actionType: '录入',
  actionPs: '',
  createTime: '2019-2-22 12:00:00',
}];
export default {
  data () {
    return {
      data,
      columns,
      form: {},
      placeholder:['开始时间','结束时间'],
      canUse: true,
      visible: false,
      headers: {},
      fileList: [],
      action: '/api/loginRegister/import/doorKeepers',
      json_fields:{
        "账户": "account",
        "密码": "password",
        "所属公司": "companyName"
      },
      json_data: [
        {
          "account": "例：tianyuan",
          "password": "123",
          "companyName": "海丰和锐"
		    }
      ]
    };
  },

  components: {
    addModal
  },

  created(){
    // this.headers['Content-Type'] = 'multipart/form-data'
    this.headers['access-token'] = sessionStorage.getItem('token')
  },

  computed: {},

  methods: {
    onChange(){},
    onClick(key){
      console.log(key)
      this.$router.push({path:`/transpotArrange/action?key=${key}&isSolved=false`})
    },
    handleAdd(){
      this.$refs.addModal.visible = true
    },
    newGuard(){
      let count = this.data.length + 1
      this.data.push({
        key: count,
        driver: `新门卫${count}`,
        escort: 'Las',
        actionType: '录入',
        actionPs: '',
        createTime: '2019-2-22 12:00:00',
      })
    },
    handleChange(e){
      this.fileList = e.fileList
      if(e.file.response) {
        let data = e.file.response.data
        if(data.length === 0) {
          const modal = this.$modal.success({
            title: '账号添加成功！'
          })
        } else {
          const modal = this.$modal.error({
            title: '以下账号未能添加成功：',
            content: (
              <div style="max-height: 360px; overflow-y: auto">
                {data.map((item) => {
                  if(item.account !== null){
                    return <p>账号：{item.account}，错误原因：{item.state}</p>
                  } else {
                    return
                  }
                })}
              </div>
            )
          })
        }
        this.fileList = []
      }
    }
  }
}

</script>
<style scoped>
  .tip {
    font-size: 8px;
    color: red;
    margin-left: 8px
  }
</style>