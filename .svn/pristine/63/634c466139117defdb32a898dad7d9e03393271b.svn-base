<template>
  <div>
    <a-modal
      title="挂车基本信息"
      :visible="visible"
      @ok="handleOk"
      :confirmLoading="confirmLoading"
      @cancel="handleCancel"
      :width="640"
      :okText="okText"
      cancelText="取消"
    >
      <a-form
        :form="form"
        @submit="handleSubmit"
        id="acitonForm"
      >
        <a-form-item
          label="车牌号"
          :label-col="labelCol"
          :wrapper-col="wrapperCol"
        >
          <a-input
            v-decorator="[
              'trailerPlateNumber',
              {rules: [{ required: true, message: '请输入车牌号!' }]}
            ]"
          />
        </a-form-item>
        <a-form-item
          label="危险化学品道路运输证号码"
          :label-col="labelCol"
          :wrapper-col="wrapperCol"
        >
          <a-input
            v-decorator="[
              'dangerChemLicenceNumber',
              {rules: [{ required: true, message: '请输入危险化学品道路运输证号码!' }]}
            ]"
          />
        </a-form-item>
        <a-form-item
          label="危险化学品道路运输证有效期止"
          :label-col="labelCol"
          :wrapper-col="wrapperCol"
        >
          <a-date-picker
            placeholder="选择日期"
            style="width:100%"
            v-decorator="[
              'dangerChemLicenceValidDate',
              {rules: [{ required: true, message: '请选择危险化学品道路运输证有效期!' }]}
            ]"
          />
        </a-form-item>
        <a-form-item
          label="经营范围"
          :label-col="labelCol"
          :wrapper-col="wrapperCol"
        >
          <a-input
            v-decorator="[
              'businessScope',
              {rules: [{ required: true, message: '请输入经营范围' }]}
            ]"
          />
        </a-form-item>
        <a-form-item
          label="罐体检查报告有效期止"
          :label-col="labelCol"
          :wrapper-col="wrapperCol"
        >
          <a-date-picker
            placeholder="选择日期"
            style="width:100%"
            v-decorator="[
              'tankInspectionValidDate'
            ]"
          />
        </a-form-item>
        <a-form-item
          label="罐体材质"
          :label-col="labelCol"
          :wrapper-col="wrapperCol"
        >
          <a-input
            v-decorator="[
              'tankMaterial'
              ]"
          />
        </a-form-item>
        <a-form-item
          label="充装材质"
          :label-col="labelCol"
          :wrapper-col="wrapperCol"
        >
          <a-input
            v-decorator="[
              'fillingMaterial'
             ]"
          />
        </a-form-item>
        <a-form-item
          label="危险化学品道路运输证附件上传"
          :label-col="labelCol"
          :wrapper-col="wrapperCol"
        >
          <a-upload
            name="file"
            :multiple="true"
            :headers="headers"
            @change="handleChange"
            v-decorator="[
                'dangerChemLicenceAttachment',
                {rules: [{ required: true, message: '请上传危险化学品道路运输证附件!' }]}
              ]"
          >
            <a-button>
              <a-icon type="upload" /> 点击上传
            </a-button>
          </a-upload>
        </a-form-item>
        <a-form-item
          label="罐体检查报告附件上传"
          :label-col="labelCol"
          :wrapper-col="wrapperCol"
          style="marginBottom:16px"
        >
          <a-upload
            name="file"
            :multiple="true"
            :headers="headers"
            @change="handleChange"
            v-decorator="[
               'tankInspectionAttachment'
             ]"
          >
            <a-button>
              <a-icon type="upload" /> 点击上传
            </a-button>
          </a-upload>
        </a-form-item>
      </a-form>
    </a-modal>
  </div>
</template>

<script>
export default {
  data () {
    return {
      trailerId: '', // 挂车id
      visible: false,
      isEdit: false,
      confirmLoading: false,
      okText: '创建信息',
      form: this.$form.createForm(this),
      headers: {
        authorization: 'authorization-text'
      },
      labelCol: {
        xs: { span: 24 },
        sm: { span: 10 }
      },
      wrapperCol: {
        xs: { span: 24 },
        sm: { span: 10 }
      }
    }
  },

  components: {},

  computed: {},

  methods: {
    showModal () {
      this.visible = true
    },
    // 判断日期和文件字段是否填写，填写则返回格式化日期，否则返回空
    isEditedDate (val) {
      if (val) {
        val = val.format('YYYY-MM-DD')
      }
      return val
    },
    // 判断日期和文件字段是否填写，填写则返回文件名，否则返回空
    isEditedFile (val) {
      console.log(val)
      if (val) {
        if (val) {
          val = val.file.name
        }
        return val
      }
    },
    handleOk (e) {
      this.confirmLoading = true
      this.form.validateFields((err, values) => {
        if (err) {
          console.log('err')
          return
        }
        const submitValues = {
          ...values,
          'dangerChemLicenceValidDate': this.isEditedDate(values['dangerChemLicenceValidDate']),
          'tankInspectionValidDate': this.isEditedDate(values['tankInspectionValidDate']),
          'dangerChemLicenceAttachment': 'file1',
          'tankInspectionAttachment': 'file2'
          // 'dangerChemLicenceAttachment': this.isEditedFile(values['dangerChemLicenceAttachment']),
          // 'tankInspectionAttachment': this.isEditedFile(values['tankInspectionAttachment'])
        }
        console.log(submitValues)
        if (this.isEdit) {
          this.$api.qualification.updateTrailer(Object.assign({ trailerId: this.trailerId }, submitValues)).then((res) => {
            if (res.code == 200) {
              this.$message.success('成功修改挂车基本信息!')
              this.$emit('newTrailerSuccess')
              this.visible = false
            } else {
              this.$message.error(res.message)
            }
          })
          this.confirmLoading = false
        } else {
          this.$api.qualification.newTrailer(submitValues).then((res) => {
            if (res.code == 200) {
              this.$message.success('成功添加挂车基本信息!')
              this.$emit('newTrailerSuccess')
              this.visible = false
            } else {
              this.$message.error(res.message)
            }
            this.confirmLoading = false
          })
        }
      })
    },
    handleCancel (e) {
      this.visible = false
    },
    handleSubmit () {

    },
    handleChange () {

    }
  }
}

</script>
